<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray_transparency"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:id="@+id/rl_print_set_title"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/textgreen">

        <ImageView
            android:id="@+id/iv_print_set_back"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@mipmap/left_btn_n" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="打印设置"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl_print_set_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_print_set_title"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="2dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:text="打印开关"
            android:textColor="@color/color_main_text_black"
            android:textSize="14sp" />

        <RadioGroup
            android:id="@+id/rg_print_set_switch"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="2dp"
            android:background="@color/white"
            android:checkedButton="@+id/rb_print_set_open"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <RadioButton
                android:id="@+id/rb_print_set_open"
                style="@style/RadioButton"
                android:text="开启打印"
                android:gravity="center"
                />

            <RadioButton
                android:id="@+id/rb_print_set_close"
                style="@style/RadioButton"
                android:text="关闭打印"
                android:gravity="center"
                />

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

        </RadioGroup>

    </LinearLayout>

    <ScrollView
        android:id="@+id/sll_print_set_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_print_set_save"
        android:layout_below="@+id/rl_print_set_switch">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/tv_print_set_connect_bluetooth"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="10dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:text="默认打印机"
                    android:textColor="@color/color_main_text_black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_print_set_print"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/tv_print_set_check_print"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:text="请选择打印机"
                    android:textColor="@color/color_main_text_black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_print_set_check_print"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/right_tw" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="2dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical"
                    android:text="选择打印纸张"
                    android:textColor="@color/color_main_text_black"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/sp_print_paper"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:spinnerMode="dropdown"
                    android:dropDownVerticalOffset="46dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="20dp" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:text="打印份数"
                android:textColor="@color/color_main_text_black"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical"
                    android:text="会员开卡小票"
                    android:textColor="@color/color_main_text_black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_print_set_opencard_money"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="20dp"
                    android:background="@null"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:paddingEnd="4dp"
                    android:text="1"
                    android:textColor="@color/color_main_text_black"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical"
                    android:text="会员充值小票"
                    android:textColor="@color/color_main_text_black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_print_set_recharge_money"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="20dp"
                    android:background="@null"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:paddingEnd="4dp"
                    android:text="1"
                    android:textColor="@color/color_main_text_black"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical"
                    android:text="会员充次小票"
                    android:textColor="@color/color_main_text_black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_print_set_recharge_times"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="20dp"
                    android:background="@null"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:paddingEnd="4dp"
                    android:text="1"
                    android:textColor="@color/color_main_text_black"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical"
                    android:text="计次消费小票"
                    android:textColor="@color/color_main_text_black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_print_set_times_consume"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="20dp"
                    android:background="@null"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:paddingEnd="4dp"
                    android:text="1"
                    android:textColor="@color/color_main_text_black"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical"
                    android:text="商品消费小票"
                    android:textColor="@color/color_main_text_black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_print_set_goods_consume"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="20dp"
                    android:background="@null"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:paddingEnd="4dp"
                    android:text="1"
                    android:textColor="@color/color_main_text_black"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical"
                    android:text="快速消费小票"
                    android:textColor="@color/color_main_text_black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_print_set_fast_consume"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="20dp"
                    android:background="@null"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:paddingEnd="4dp"
                    android:text="1"
                    android:textColor="@color/color_main_text_black"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical"
                    android:text="积分兑换小票"
                    android:textColor="@color/color_main_text_black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_print_set_exchange_integral"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="20dp"
                    android:background="@null"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:paddingEnd="4dp"
                    android:text="1"
                    android:textColor="@color/color_main_text_black"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_onekey"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical"
                    android:text="一键加油小票"
                    android:textColor="@color/color_main_text_black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_print_set_onekey"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="20dp"
                    android:background="@null"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:paddingEnd="4dp"
                    android:text="1"
                    android:textColor="@color/color_main_text_black"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical"
                    android:text="交班小票         "
                    android:textColor="@color/color_main_text_black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_print_set_hand_duty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="20dp"
                    android:background="@null"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:paddingEnd="4dp"
                    android:text="1"
                    android:textColor="@color/color_main_text_black"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/tv_print_set_save"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:background="@color/textgreen"
        android:gravity="center"
        android:text="保存设置"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>
