<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="210dp"
    android:layout_height="110dp"
    android:background="@drawable/shap_homesearch"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_out"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@null"
        android:layout_marginLeft="@dimen/dp_15"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_hedimg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:src="@mipmap/member_head_nohead" />

        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/img_hedimg"
            android:layout_marginLeft="@dimen/dp_10">


            <TextView
                android:id="@+id/tv_store_name"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:layout_weight="1"
                android:text="暂无名称"
                android:singleLine="true"
                android:textColor="@color/text60"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_store_name_set"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="点击设置"
                android:textColor="@color/nameset"
                android:textSize="16sp"
                android:visibility="gone"/>

        </LinearLayout>




        <TextView
            android:id="@+id/tv_store_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_toRightOf="@+id/img_hedimg"
            android:layout_below="@+id/ll_name"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:text="1058346971@qq.com"
            android:textColor="@color/text60"
            android:textSize="@dimen/dp_14"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_change_head"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="修改头像"
            android:textSize="@dimen/dp_14"
            android:textColor="@color/text60" />
        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_5"
            android:background="@color/text60"></View>
        <TextView
            android:id="@+id/tv_change_pwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="修改密码"
            android:textSize="@dimen/dp_14"
            android:textColor="@color/text60"/>
        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_5"
            android:background="@color/text60"></View>
        <TextView
            android:id="@+id/tv_sigin_out"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="退出"
            android:textSize="@dimen/dp_14"
            android:textColor="@color/textred"/>

    </LinearLayout>



</LinearLayout>