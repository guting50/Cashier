<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/shap_homeviptop">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_18"
            android:text="修改登录密码"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:padding="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/ty_close" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_green_line"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView style="@style/Flag"
               android:layout_toLeftOf="@+id/tv_old_pwd"/>

            <TextView
                android:id="@+id/tv_old_pwd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_alignParentEnd="true"
                android:text="旧密码"
                android:textColor="@color/text0050"
                android:textSize="@dimen/dp_16"/>

        </RelativeLayout>


        <EditText
            android:id="@+id/ed_old_pwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_10"
            android:background="@drawable/shap_jiesuannum"
            android:inputType="textPassword"
            android:gravity="left|center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView style="@style/Flag"
                android:layout_toLeftOf="@+id/tv_new_pwd"/>

            <TextView
                android:id="@+id/tv_new_pwd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_alignParentEnd="true"
                android:text="新密码"
                android:textColor="@color/text0050"
                android:textSize="@dimen/dp_16"/>

        </RelativeLayout>


        <EditText
            android:id="@+id/ed_new_pwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/dp_20"

            android:paddingLeft="@dimen/dp_10"
            android:background="@drawable/shap_jiesuannum"
            android:inputType="textPassword"
            android:gravity="left|center_vertical" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView style="@style/Flag"
                android:layout_toLeftOf="@+id/tv_ensure_new_pwd"/>

            <TextView
                android:id="@+id/tv_ensure_new_pwd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_alignParentEnd="true"
                android:text="确认新密码"
                android:textColor="@color/text0050"
                android:textSize="@dimen/dp_16"/>

        </RelativeLayout>


        <EditText
            android:id="@+id/ed_ensure_new_pwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_10"
            android:background="@drawable/shap_jiesuannum"
            android:inputType="textPassword"
            android:gravity="left|center_vertical" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/dp_25"
        android:paddingBottom="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="150dp"
            android:gravity="center"
            android:text="保存"
            android:background="@drawable/shap_xianjin"
            android:textColor="@color/white"
            android:textSize="17sp" />


        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:background="@drawable/shap_jiesuannum"
            android:text="关闭"
            android:textColor="@color/text60"
            android:textSize="17sp" />
    </LinearLayout>


</LinearLayout>