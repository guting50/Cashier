<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shap_shop_img">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_160"
        android:background="@drawable/shopinfo_bg"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_shop"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:layout_marginTop="@dimen/dp_20"
            android:src="@drawable/defalut_store"></ImageView>

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_shop"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="20dp"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="开通：2019-7-5"
            android:layout_marginLeft="20dp"
            android:singleLine="true"
            android:textColor="@color/textshopinfo"
            android:textSize="@dimen/dp_14"/>

        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="到期：2019-7-5"
            android:singleLine="true"
            android:textColor="@color/textshopinfo"
            android:textSize="@dimen/dp_14"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="版本："
            android:layout_marginLeft="20dp"
            android:singleLine="true"
            android:textColor="@color/textshopinfo"
            android:textSize="@dimen/dp_14"/>

        <TextView
            android:id="@+id/tv_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="用户数："
            android:singleLine="true"
            android:textColor="@color/textshopinfo"
            android:textSize="@dimen/dp_14"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_member"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="会员数："
            android:layout_marginLeft="20dp"
            android:singleLine="true"
            android:textColor="@color/textshopinfo"
            android:textSize="@dimen/dp_14"/>

        <TextView
            android:id="@+id/tv_goods"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="商品数："
            android:singleLine="true"
            android:textColor="@color/textshopinfo"
            android:textSize="@dimen/dp_14"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/view_gray_line">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/show_shop_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="查看店铺信息"
            android:textSize="18dp"
            android:textColor="@color/textshopinfo"/>
    </LinearLayout>



</LinearLayout>