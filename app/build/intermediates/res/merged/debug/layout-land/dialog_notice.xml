<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="160dp"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/shap_homeviptop">

        <TextView
            android:id="@+id/notice_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_18"
            android:text="收银台挂账提示"
            android:textColor="@color/text60"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:padding="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/ty_close" />
    </RelativeLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_head"
        android:background="@color/view_green_line"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:padding="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_18"
            android:src="@mipmap/wh"/>

        <TextView
            android:id="@+id/tv_notice_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你确定要挂单吗？"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/dp_14"
            android:textColor="@color/text66"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/dp_7"
        android:paddingBottom="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center"
            android:background="@drawable/btt_cancel"
            android:text="取消"
            android:textColor="@color/text60"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/tv_cancel"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="center"
            android:text="确认"
            android:background="@drawable/btt_ensure"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>



</RelativeLayout>