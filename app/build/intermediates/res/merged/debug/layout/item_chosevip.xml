<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_vipcard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="会员卡号"
            android:textColor="@color/blue"
            android:textSize="@dimen/sp_13" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/view_color"></View>

        <TextView
            android:id="@+id/tv_vipname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="会员姓名"
            android:textColor="@color/text60"
            android:textSize="@dimen/sp_13" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/view_color"></View>

        <TextView
            android:id="@+id/tv_vipdnegji"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="会员等级"
            android:textColor="@color/text60"
            android:textSize="@dimen/sp_13" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/view_color"></View>

        <TextView
            android:id="@+id/tv_vipyue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="余额"
            android:textColor="@color/text60"
            android:textSize="@dimen/sp_13" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/view_color"></View>

        <TextView
            android:id="@+id/tv_vipjifen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="积分"
            android:textColor="@color/text60"
            android:textSize="@dimen/sp_13" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/view_color"></View>

        <TextView
            android:id="@+id/tv_vipnum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="剩余次数"
            android:textColor="@color/text60"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>
</LinearLayout>