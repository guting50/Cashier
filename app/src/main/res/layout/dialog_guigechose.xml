<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shap_homesearch"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_50"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/shap_homeviptop">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:text="选择规格"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/li_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="颜色"
                    android:textColor="@color/text60"
                    android:textSize="@dimen/sp_20" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@color/view_color" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/color_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_30" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_cima"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_cima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="尺码"
                    android:textColor="@color/text60"
                    android:textSize="@dimen/sp_20" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@color/view_color"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/cima_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_30"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_cicun"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_cicun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="尺寸"
                    android:textColor="@color/text60"
                    android:textSize="@dimen/sp_20" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@color/view_color"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/cicun_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_30"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_confirm"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_35"
                android:background="@drawable/shap_shopdetail_confirm">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:text="确定"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_13" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_cancle"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_35"
                android:layout_marginLeft="@dimen/dp_60"
                android:background="@drawable/shap_shopdetail_cancle">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:text="取消"
                    android:textColor="@color/text99"
                    android:textSize="@dimen/sp_13" />

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>