<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="700dp"
    android:layout_height="410dp"
    android:layout_gravity="center_horizontal"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/shap_homeviptop">

        <TextView
            android:id="@+id/keyboard_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_18"
            android:text="选择会员"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/sp_16" />


        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:padding="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/ty_close" />

        <!--<ImageView-->
        <!--android:id="@+id/iv_close"-->
        <!--android:layout_width="@dimen/dp_35"-->
        <!--android:layout_height="@dimen/dp_35"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_marginRight="@dimen/dp_10"-->
        <!--android:background="@drawable/ty_close"-->
        <!--android:padding="@dimen/dp_5" />-->
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_green_line"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_15"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="335dp"
            android:layout_weight="4.5"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_search"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_edittext_normal"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <EditText
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_toLeftOf="@+id/iv_del"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="请输入会员卡号/卡面号/手机号"
                    android:textColor="@color/text99"
                    android:textColorHint="@color/text99"
                    android:textSize="@dimen/dp_16"/>

                <ImageView
                    android:id="@+id/iv_del"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:padding="@dimen/dp_8"
                    android:src="@drawable/home_error" />



            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/bg_edittext_normal"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        android:singleLine="true"
                        android:text="姓名："
                        android:textColor="@color/text60"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_cardnum"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        android:singleLine="true"
                        android:text="卡号："
                        android:textColor="@color/text60"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_sex"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        android:singleLine="true"
                        android:text="性别："
                        android:textColor="@color/text60"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_birthday"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        android:singleLine="true"
                        android:text="生日："
                        android:textColor="@color/text60"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_grade"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        android:singleLine="true"
                        android:text="等级："
                        android:textColor="@color/text60"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        android:singleLine="true"
                        android:text="手机："
                        android:textColor="@color/text60"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|left"
                            android:text="余额："
                            android:textColor="@color/text60"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/tv_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|left"
                            android:singleLine="true"
                            android:textColor="@color/textred"
                            android:textSize="14sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|left"
                            android:text="积分："
                            android:textColor="@color/text60"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/tv_integral"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|left"
                            android:singleLine="true"
                            android:textColor="@color/textred"
                            android:textSize="14sp"/>

                    </LinearLayout>




                </LinearLayout>
                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="0dp"-->
                    <!--android:layout_marginBottom="@dimen/dp_20"-->
                    <!--android:layout_marginLeft="10dp"-->
                    <!--android:layout_marginRight="10dp"-->
                    <!--android:layout_weight="0.5"-->
                    <!--android:orientation="horizontal">-->

                <!--</LinearLayout>-->


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="360dp"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_weight="3"
            android:orientation="vertical">

            <!--数字键盘-->
            <LinearLayout
                android:id="@+id/ll_fast_consume_keyboard"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_keyboard_7"
                            style="@style/NumButton"
                            android:text="7" />

                        <Button
                            android:id="@+id/btn_keyboard_8"
                            style="@style/NumButton"
                            android:text="8" />

                        <Button
                            android:id="@+id/btn_keyboard_9"
                            style="@style/NumButton"
                            android:text="9" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_keyboard_4"
                            style="@style/NumButton"
                            android:text="4" />

                        <Button
                            android:id="@+id/btn_keyboard_5"
                            style="@style/NumButton"
                            android:text="5" />

                        <Button
                            android:id="@+id/btn_keyboard_6"
                            style="@style/NumButton"
                            android:text="6" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_keyboard_1"
                            style="@style/NumButton"
                            android:text="1" />

                        <Button
                            android:id="@+id/btn_keyboard_2"
                            style="@style/NumButton"
                            android:text="2" />

                        <Button
                            android:id="@+id/btn_keyboard_3"
                            style="@style/NumButton"
                            android:text="3" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <Button
                            android:id="@+id/btn_keyboard_0"
                            style="@style/NumButton1"
                            android:text="0" />

                        <Button
                            android:id="@+id/btn_keyboard_00"
                            style="@style/NumButton"
                            android:text="00" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/btn_keyboard_delete"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_weight="1"
                        android:background="@drawable/selector_clicked_view">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="false">

                            <Button
                                android:layout_width="40dp"
                                android:layout_height="30dp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/cash_ico_backspace"
                                android:clickable="false"
                                android:textColor="@color/textcolor"
                                android:textSize="30sp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_keyboard_dian"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_weight="1"
                        android:background="@drawable/selector_clicked_view"
                        android:gravity="center"
                        android:onClick="onClick"
                        android:text="."
                        android:textColor="@color/textcolor"
                        android:textSize="35sp" />

                    <LinearLayout
                        android:id="@+id/ll_keyboard_confirm"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/background_green"
                            android:clickable="false"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/btn_keyboard_confirm"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="@null"
                                android:gravity="center_horizontal|bottom"
                                android:text="确认"
                                android:textColor="@color/white"
                                android:textSize="22dp" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="0dp"
                                android:layout_margin="@dimen/dp_10"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:src="@drawable/cash_ico_enter" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <!--<RelativeLayout-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="@dimen/dp_6">-->

                <!---->
                <!---->
            <!--</RelativeLayout>-->

            <LinearLayout
                android:id="@+id/li_jiesuan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_6"
                android:background="@drawable/shap_jiesunmoney"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/js_complete"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="确认选择会员"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_18" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>