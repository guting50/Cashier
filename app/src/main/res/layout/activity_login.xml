<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_root">

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_110"
            android:text="会  员  管  理  收  银  系  统"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_30" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/li_bg"
                android:layout_width="@dimen/dp_430"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/shap_login_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_45"
                    android:text="账号登录"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/sp_16"

                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginRight="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@drawable/shap_editbg">

                    <ImageView
                        android:id="@+id/iv_p"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@drawable/login_phone" />

                    <com.wycd.yushangpu.widget.views.ClearEditText
                        android:id="@+id/et_login_account"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_toRightOf="@id/iv_p"
                        android:background="@null"
                        android:drawableRight="@drawable/home_error"
                        android:hint="请输入账号"
                        android:textColor="@color/textcolor"
                        android:textColorHint="@color/textbb"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginRight="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_12"
                    android:background="@drawable/shap_editbg">

                    <ImageView
                        android:id="@+id/iv_pa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@drawable/login_pwd" />

                    <com.wycd.yushangpu.widget.views.ClearEditText
                        android:id="@+id/et_login_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_toRightOf="@id/iv_pa"
                        android:background="@null"
                        android:drawableRight="@drawable/home_error"
                        android:hint="请输入密码"
                        android:inputType="textPassword"
                        android:textColor="@color/textcolor"
                        android:textColorHint="@color/textbb"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>


                <CheckBox
                    android:id="@+id/login_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="记住密码"
                    android:textColor="@color/text60"
                    android:textSize="@dimen/sp_12" />


                <RelativeLayout
                    android:id="@+id/rl_login"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dp_80"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginRight="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_25"
                    android:background="@drawable/shap_login">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="登   录"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" @ 2015-2019 All Rights Reserved V1.1.0.0"
                android:textColor="@color/text60"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_1"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>