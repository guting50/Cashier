<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_110"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_bg"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_85"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:background="@drawable/shap_search_2dp">


            <RelativeLayout
                android:id="@+id/rl_state"
                android:layout_width="@dimen/dp_84"
                android:layout_height="@dimen/dp_84"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_1"
                android:background="@color/textyellow">

                <LinearLayout
                    android:id="@+id/li_mo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_20"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:text="30"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_25" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_yhqmsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/li_mo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="满100元可用"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_toRightOf="@id/rl_state"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_22"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rl_xiaofei"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_22"
                        android:background="@drawable/shap_yhqbutton_chose">

                        <TextView
                            android:id="@+id/tv_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="消费"
                            android:paddingRight="@dimen/dp_4"
                            android:paddingLeft="@dimen/dp_4"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_12" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:layout_toRightOf="@id/rl_xiaofei"
                        android:text="双旦活动"
                        android:textColor="@color/text99"
                        android:textSize="@dimen/sp_10" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_youxiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="永久有效"
                    android:textColor="@color/text99"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_allshop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_1"
                    android:text="所有店铺可用"
                    android:textColor="@color/text99"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_diejia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_1"
                    android:text="不可叠加使用"
                    android:textColor="@color/text99"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_chose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:visibility="gone"
                android:background="@drawable/yhq_jiao" />
        </RelativeLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_80"
            android:background="@color/white"></View>
    </LinearLayout>

</LinearLayout>