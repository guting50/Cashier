<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:ignore="MissingDefaultResource">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_500"
        android:layout_gravity="center_horizontal"
        android:background="@color/white_loading">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="488dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@drawable/shap_homesearch"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/shap_homeviptop">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:text="选择会员"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/sp_15" />


                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:padding="@dimen/dp_10"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/ty_close" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_green_line"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_marginBottom="@dimen/dp_15"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/li_shaixuan"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="match_parent"
                    android:background="@drawable/shap_home_classchose"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/chosevip_shaixuan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:text="筛选条件"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dp_350"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@drawable/shap_homesearch"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.wycd.yushangpu.widget.views.ClearEditText
                        android:id="@+id/et_search"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableRight="@drawable/home_error"
                        android:hint="请输入会员卡号/姓名/手机号/卡面号"
                        android:textColor="@color/textcolor"
                        android:textColorHint="@color/textbb"
                        android:textSize="@dimen/sp_13" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#bebebe"></View>

                    <LinearLayout
                        android:id="@+id/li_search"
                        android:layout_width="@dimen/dp_70"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/chosevip_search" />

                        <TextView
                            android:id="@+id/tv_search"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_2"
                            android:text="查询"
                            android:textColor="@color/textgreen"
                            android:textSize="@dimen/sp_13" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="@dimen/dp_30"
                android:background="@drawable/shap_homesearch"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:background="@drawable/shap_homeviptop"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_vipcard"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:text="会员卡号"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_vipname"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="会员姓名"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_vipdnegji"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="会员等级"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_vipyue"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="余额"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_vipjifen"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="积分"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_vipnum"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="剩余次数"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <ListView
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                     android:scrollbars="none"
                    android:cacheColorHint="#00000000"
                    android:dividerHeight="0.5dp"
                    android:divider="@color/view_color"
                    ></ListView>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>