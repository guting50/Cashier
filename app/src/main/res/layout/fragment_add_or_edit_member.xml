            android:layout_width="1dp"
            android:layout_height="19dp"
            android:layout_centerInParent="true"
            android:background="#c0c4cc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/view_line_o"
            android:gravity="center"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:text="自定义信息"
            android:textColor="@color/color_999999"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="67dp"
            android:background="#c0c4cc" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="48dp"
            android:src="@mipmap/member_head_nohead" />

        <com.gt.utils.view.BgFrameLayout
            android:layout_width="138dp"
            android:layout_height="42dp"
            android:layout_marginLeft="76dp"
            android:layout_marginTop="228dp"
            app:corners_radius="5dp"
            app:solid_color="@color/color_149f4a">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="点击上传"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </com.gt.utils.view.BgFrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="23dp"
            android:layout_marginRight="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/view_line_1">

                <LinearLayout
                    android:id="@+id/ly_VCH_Card"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical">

                    <TextView
