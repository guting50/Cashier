                            android:layout_height="match_parent"
                            android:layout_marginLeft="-5dp"
                            android:layout_marginRight="-5dp"
                            android:background="@drawable/selector_edit_green_gray_o"
                            android:gravity="center"
                            android:text="男"
                            android:textColor="@color/white"
                            android:textSize="17sp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="60dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_VIP_Sex_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="-6dp"
                            android:background="@drawable/selector_edit_green_gray_o"
                            android:gravity="center"
                            android:paddingLeft="3dp"
                            android:text="女"
                            android:textColor="@color/title_color"
                            android:textSize="17sp" />
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_VIP_FaceNumber"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_below="@+id/ly_VIP_Name"
                    android:layout_marginTop="7dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="卡面号码"
                        android:textColor="@color/title_color"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="*"
                        android:textColor="@color/textred"
                        android:visibility="invisible" />

                    <EditText
                        android:id="@+id/et_VIP_FaceNumber"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/selector_edit_green_gray"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textColor="@color/text66"
                        android:textSize="17sp" />

                </LinearLayout>

                <LinearLayout
