                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="初始金额"
                        android:textColor="@color/title_color"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="*"
                        android:textColor="@color/textred"
                        android:visibility="invisible" />

                    <EditText
                        android:id="@+id/et_MA_AggregateAmount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="-6dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_edit_green_gray"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textColor="@color/text66"
                        android:textSize="17sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/view_gray_line" />

                    <FrameLayout
                        android:layout_width="50dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="-6dp"
                            android:background="@drawable/selector_edit_green_gray_o"
                            android:gravity="center"
                            android:paddingLeft="3dp"
                            android:text="元"
                            android:textColor="@color/color_999999"
                            android:textSize="17sp" />
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_VIP_Referee"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_below="@+id/ly_MA_AggregateAmount"
                    android:layout_marginTop="7dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="推荐人"
                        android:textColor="@color/title_color"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="*"
                        android:textColor="@color/textred"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/et_VIP_Referee"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="32dp"
                        android:layout_marginRight="-6dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_edit_green_gray"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textColor="@color/text66"
                        android:textSize="17sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/view_gray_line" />

                    <FrameLayout
                        android:layout_width="110dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/et_select_VIP_Referee"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="-6dp"
                            android:background="@drawable/selector_edit_green_gray_o"
                            android:gravity="center"
                            android:paddingLeft="3dp"
                            android:text="选择推荐人"
                            android:textColor="@color/white"
                            android:textSize="17sp" />
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_EM_Name"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_below="@+id/ly_VIP_Referee"
                    android:layout_marginTop="7dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开卡人员"
                        android:textColor="@color/title_color"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="*"
                        android:textColor="@color/textred"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/et_EM_Name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="-6dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_edit_green_gray"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textColor="@color/text66"
                        android:textSize="17sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/view_gray_line" />

                    <FrameLayout
                        android:layout_width="110dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/et_select_EM_Name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="-6dp"
                            android:background="@drawable/selector_edit_green_gray_o"
                            android:gravity="center"
                            android:paddingLeft="3dp"
                            android:text="选择人员"
                            android:textColor="@color/white"
                            android:textSize="17sp" />
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_VCH_CreateTime"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_below="@+id/ly_EM_Name"
                    android:layout_marginTop="7dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开卡日期"
                        android:textColor="@color/title_color"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="*"
                        android:textColor="@color/textred"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/et_VCH_CreateTime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/selector_edit_green_gray"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textColor="@color/text66"
                        android:textSize="17sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_VIP_Addr"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_below="@+id/ly_VCH_CreateTime"
                    android:layout_marginTop="7dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="会员地址"
                        android:textColor="@color/title_color"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="*"
                        android:textColor="@color/textred"
                        android:visibility="invisible" />

                    <EditText
                        android:id="@+id/et_VIP_Addr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/selector_edit_green_gray"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textColor="@color/text66"
                        android:textSize="17sp" />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:id="@+id/view_line_1"
                android:layout_width="88dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/view_line_1">

                <LinearLayout
                    android:id="@+id/ly_VIP_CellPhone"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="会员手机"
                        android:textColor="@color/title_color"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="*"
                        android:textColor="@color/textred" />

                    <EditText
                        android:id="@+id/et_VIP_CellPhone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/selector_edit_green_gray"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textColor="@color/text66"
                        android:textSize="17sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_VG_GID"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_below="@+id/ly_VIP_CellPhone"
                    android:layout_marginTop="7dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="会员等级"
                        android:textColor="@color/title_color"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="*"
                        android:textColor="@color/textred" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/et_VG_GID"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/selector_edit_green_gray"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:textColor="@color/text66"
                            android:textSize="17sp" />

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/icon_xiala" />
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_VIP_Birthday"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_below="@+id/ly_VG_GID"
                    android:layout_marginTop="7dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="会员生日"
                        android:textColor="@color/title_color"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="*"
                        android:textColor="@color/textred"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/et_VIP_Birthday"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="-6dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_edit_green_gray"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textColor="@color/text66"
                        android:textSize="17sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/view_gray_line" />

                    <FrameLayout
                        android:layout_width="80dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_select_birthday_type"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="-6dp"
                            android:background="@drawable/selector_edit_green_gray_o"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:text="公历"
                            android:textColor="@color/color_999999"
                            android:textSize="17sp" />

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/icon_xiala" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_VIP_Email"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_below="@+id/ly_VIP_Birthday"
