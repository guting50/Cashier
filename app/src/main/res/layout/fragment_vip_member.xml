<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.75"
            android:background="@drawable/background_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_46"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.gt.utils.widget.BgLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        app:corners_radius_left_bottom="2dp"
                        app:corners_radius_left_top="2dp"
                        app:stroke_color="@color/colorPrimary"
                        app:stroke_width="1dp">

                        <EditText
                            android:id="@+id/edit_text_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@color/transparent"
                            android:gravity="center_vertical"
                            android:hint="会员卡号/姓名/手机号/卡面号" />

                    </com.gt.utils.widget.BgLayout>

                    <com.gt.utils.widget.BgLayout
                        android:id="@+id/li_search"
                        android:layout_width="@dimen/dp_70"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="-1dp"
                        app:corners_radius_right_bottom="5dp"
                        app:corners_radius_right_top="5dp"
                        app:solid_color="@color/colorPrimary">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/search" />

                    </com.gt.utils.widget.BgLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_member_count"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/texted"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_15"
                    android:text="共有0个会员"
                    android:textColor="@color/title_color"
                    android:textSize="15sp" />

                <com.jcodecraeer.xrecyclerview.XRecyclerView
                    android:id="@+id/search_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:splitMotionEvents="false" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/null_state_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="197dp"
                    android:layout_height="120dp"
                    android:src="@mipmap/wuhuiyuan" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:gravity="center"
                    android:text="还没有会员，快去新增吧～"
                    android:textColor="@color/color_999999"
                    android:textSize="17sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_add_member"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="right|bottom"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="12dp"
                android:src="@mipmap/icon_add_member" />

        </FrameLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/background_texte0">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="68dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="18dp"
                    android:text="会员信息"
                    android:textColor="@color/title_color"
                    android:textSize="26sp" />

                <ImageView
                    android:id="@+id/iv_clone"
                    android:layout_width="60dp"
                    android:layout_height="68dp"
                    android:layout_alignParentRight="true"
                    android:padding="20dp"
                    android:src="@mipmap/ty_close" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/iv_clone"
                    android:background="#cec4cc" />

                <RelativeLayout
                    android:id="@+id/member_head_info_layout"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_below="@+id/divider"
                    android:background="@color/white"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_info_head_img"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/member_head_nohead" />

                    <TextView
                        android:id="@+id/tv_info_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="30dp"
                        android:layout_toRightOf="@+id/iv_info_head_img"
                        android:text="会员名称"
                        android:textColor="@color/title_color"
                        android:textSize="22sp" />

                    <com.gt.utils.widget.BgTextView
                        android:id="@+id/tv_info_vg_Name"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_alignTop="@+id/tv_info_name"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_toRightOf="@+id/tv_info_name"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Lv.青铜会员"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        app:corners_radius="5dp"
                        app:solid_color="@color/text_yellow" />

                    <TextView
                        android:id="@+id/tv_info_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_info_name"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/iv_info_head_img"
                        android:text="电话"
                        android:textColor="@color/title_color"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:id="@+id/ly_vip_recharge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40dp"
                        android:layout_toLeftOf="@+id/ly_goods_consume"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/icon_vip_recharge" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="会员充值"
                            android:textColor="@color/title_color"
                            android:textSize="17sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ly_goods_consume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40dp"
                        android:layout_toLeftOf="@+id/ly_update_info"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/icon_goods_consume" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="商品消费"
                            android:textColor="@color/title_color"
                            android:textSize="17sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ly_update_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/icon_update_info" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="修改资料"
                            android:textColor="@color/title_color"
                            android:textSize="17sp" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/member_info_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/member_head_info_layout"
                    android:layout_marginTop="12dp"
                    android:background="@color/white"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/datum_line">

                        <TextView
                            android:id="@+id/tv_basics"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="36dp"
                            android:text="会员卡号"
                            android:textColor="@color/text66"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/tv_info_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="36dp"
                            android:layout_toRightOf="@+id/tv_basics"
                            android:textColor="@color/title_color"
                            android:textSize="17sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_info_card"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:text="开卡日期"
                            android:textColor="@color/text66"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/tv_create_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_info_card"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:layout_toRightOf="@+id/tv_basics"
                            android:textColor="@color/title_color"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/tv_referee_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_create_time"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:text="推荐人卡号"
                            android:textColor="@color/text66"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/tv_referee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_create_time"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="30dp"
                            android:layout_toRightOf="@+id/tv_basics"
                            android:textColor="@color/title_color"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/tv_birthday_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_referee"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:lineSpacingExtra="10dp"
                            android:text="会员生日"
                            android:textColor="@color/text66"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/tv_birthday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_referee"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:layout_toRightOf="@+id/tv_basics"
                            android:textColor="@color/title_color"
                            android:textSize="17sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_birthday"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:lineSpacingExtra="10dp"
                            android:text="电子邮箱"
                            android:textColor="@color/text66"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/tv_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_birthday"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:layout_toRightOf="@+id/tv_basics"
                            android:textColor="@color/title_color"
                            android:textSize="17sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_email"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:lineSpacingExtra="10dp"
                            android:text="开卡费用"
                            android:textColor="@color/text66"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/tv_fee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_email"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:layout_toRightOf="@+id/tv_basics"
                            android:textColor="@color/title_color"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/tv_addr_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_fee"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:lineSpacingExtra="10dp"
                            android:text="会员地址"
                            android:textColor="@color/text66"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/tv_addr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_fee"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:layout_toRightOf="@+id/tv_basics"
                            android:textColor="@color/title_color"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/tv_label_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_addr"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:lineSpacingExtra="10dp"
                            android:text="会员标签"
                            android:textColor="@color/text66"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/tv_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_addr"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:layout_toRightOf="@+id/tv_basics"
                            android:textColor="@color/title_color"
                            android:textSize="17sp" />

                    </RelativeLayout>

                    <View
                        android:id="@+id/datum_line"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/datum_line">

                        <TextView
                            android:id="@+id/tv_basics_o"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="36dp"
                            android:text="会员状态"
                            android:textColor="@color/text66"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/tv_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="36dp"
                            android:layout_toRightOf="@+id/tv_basics_o"
                            android:textColor="@color/title_color"
                            android:textSize="17sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_state"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:text="过期时间"
                            android:textColor="@color/text66"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/tv_overdue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_state"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:layout_toRightOf="@+id/tv_basics_o"
                            android:textColor="@color/title_color"
                            android:textSize="17sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_overdue"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:text="卡面号码"
                            android:textColor="@color/text66"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/tv_face_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_overdue"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:layout_toRightOf="@+id/tv_basics_o"
                            android:textColor="@color/title_color"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/tv_ic_card_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_face_number"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:lineSpacingExtra="10dp"
                            android:text="身份证号"
                            android:textColor="@color/text66"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/tv_ic_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_face_number"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:layout_toRightOf="@+id/tv_basics_o"
                            android:textColor="@color/title_color"
                            android:textSize="17sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_ic_card"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:lineSpacingExtra="10dp"
                            android:text="开卡店铺"
                            android:textColor="@color/text66"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/tv_g_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_ic_card"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:layout_toRightOf="@+id/tv_basics_o"
                            android:textColor="@color/title_color"
                            android:textSize="17sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_g_id"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:lineSpacingExtra="10dp"
                            android:text="固定电话"
                            android:textColor="@color/text66"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/tv_fixed_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_g_id"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:layout_toRightOf="@+id/tv_basics_o"
                            android:textColor="@color/title_color"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/tv_em_name_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_fixed_phone"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:lineSpacingExtra="10dp"
                            android:text="开卡人员"
                            android:textColor="@color/text66"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/tv_em_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_fixed_phone"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:layout_toRightOf="@+id/tv_basics_o"
                            android:textColor="@color/title_color"
                            android:textSize="17sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_em_name"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:lineSpacingExtra="10dp"
                            android:text="微信会员"
                            android:textColor="@color/text66"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/tv_wx_vip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_em_name"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:layout_toRightOf="@+id/tv_basics_o"
                            android:textColor="@color/title_color"
                            android:textSize="17sp" />

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_vip_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>