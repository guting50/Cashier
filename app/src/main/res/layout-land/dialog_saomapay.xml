<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_400"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="扫码支付"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text60"
        android:textSize="@dimen/sp_15"
        android:layout_marginTop="@dimen/dp_15"
        />

    <ImageView
        android:id="@+id/iv_clone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/ty_close" />

    <ImageView
        android:id="@+id/iv_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_marginLeft="@dimen/dp_30"
        android:background="@drawable/ty_saoma" />

    <TextView
        android:id="@+id/tv_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支持微信或支付宝条码支付"
        android:layout_toRightOf="@id/iv_s"
        android:layout_marginTop="@dimen/dp_80"
        android:textColor="@color/text60"
        android:layout_marginLeft="@dimen/dp_15"
        android:textSize="@dimen/sp_14"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请使用条码枪进行扫码"
        android:layout_toRightOf="@id/iv_s"
        android:layout_marginTop="@dimen/dp_15"
        android:textColor="@color/text60"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_below="@id/tv_one"
        android:textSize="@dimen/sp_14"
        />
    <RelativeLayout
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_45"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_s"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_35"
        android:background="@drawable/shap_saoma_edit">

        <com.wycd.yushangpu.widget.views.ClearEditText
            android:id="@+id/et_saoma"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@null"
            android:hint="请用扫码枪扫描客户二维码"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/textbb"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>
</RelativeLayout>
</LinearLayout>