<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sp2019041642223"
                android:textColor="@color/blue"
                android:textSize="@dimen/sp_11" />
            <TextView
                android:id="@+id/tv_codetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="sp2019041642223"
                android:textColor="@color/text99"
                android:textSize="@dimen/sp_11" />
        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/view_color"
            ></View>

        <TextView
            android:id="@+id/tv_card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="会员卡"
            android:textColor="@color/text60"
            android:textSize="@dimen/sp_13" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/view_color"
            ></View>
        <TextView
            android:id="@+id/tv_vipmsg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="会员信息"
            android:textColor="@color/text60"
            android:textSize="@dimen/sp_13" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/view_color"
            ></View>
        <TextView
            android:id="@+id/tv_ordermoney"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="订单金额"
            android:textColor="@color/text60"
            android:textSize="@dimen/sp_13" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/view_color"
            ></View>
        <TextView
            android:id="@+id/tv_handler"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="操作员"
            android:textColor="@color/text60"
            android:textSize="@dimen/sp_13" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/view_color"
            ></View>
        <TextView
            android:id="@+id/tv_handle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="操作"
            android:textColor="@color/textgreen"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>
</LinearLayout>