<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textgray">

    <RelativeLayout
        android:id="@+id/taskbar_layout"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/textgray">

        <RelativeLayout
            android:id="@+id/rl_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@null">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_hedimg"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/member_head_nohead" />

            <TextView
                android:id="@+id/tv_store_name"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/img_hedimg"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="店铺名称"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />

            <com.gt.utils.view.BgFrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_store_name"
                android:layout_centerInParent="true"
                android:padding="3dp"
                app:corners_radius="2dp"
                app:solid_color="@color/texty9c">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="高级版"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10" />
            </com.gt.utils.view.BgFrameLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_Cashier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_out"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:text="收银"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_Cashier"
            android:background="@null"
            android:text="会员"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_member"
            android:background="@null"
            android:text="商品"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_goods"
            android:background="@null"
            android:text="销售"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_home_print_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_sale"
            android:background="@null"
            android:text="设置"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/rl_houtai"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:background="@null"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/ig_back"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:src="@drawable/cash_ico_backstage" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ig_back"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="后台"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_jiaoban"
            android:layout_width="@dimen/dp_40"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:background="@null"
            android:gravity="center_horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/ig_exchange"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="@dimen/dp_5"
                android:src="@drawable/cash_ico_exchange" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ig_exchange"
                android:layout_marginTop="@dimen/dp_5"
                android:text="交班"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cashier_layout"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_toRightOf="@+id/taskbar_layout"
        android:background="@drawable/background_white">

        <TextView
            android:id="@+id/tv_ordernum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:text="订单号"
            android:textColor="@color/text60"
            android:textSize="@dimen/dp_13" />

        <TextView
            android:id="@+id/tv_ordertime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_toRightOf="@+id/tv_ordernum"
            android:text="时间"
            android:textColor="@color/text60"
            android:textSize="@dimen/dp_13" />

        <ImageView
            android:id="@+id/im_clear"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginRight="40dp"
            android:padding="@dimen/dp_3"
            android:src="@drawable/ysl_delet" />

        <TextView
            android:id="@+id/rl_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="30dp"
            android:paddingTop="15dp"
            android:paddingRight="5dp"
            android:paddingBottom="15dp"
            android:text="清空"
            android:textSize="@dimen/dp_14" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@+id/tv_ordernum"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:padding="@dimen/dp_7"
            android:src="@drawable/cash_ico_keyboard"
            android:visibility="gone" />

        <com.gt.utils.view.BgFrameLayout
            android:id="@+id/member_bg_layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35"
            android:layout_below="@+id/tv_ordernum"
            android:layout_marginLeft="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            app:corners_radius="3dp"
            app:solid_color="@color/textgreen">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="会员[F2]"
                android:textColor="@color/white" />
        </com.gt.utils.view.BgFrameLayout>

        <com.gt.utils.view.BgFrameLayout
            android:id="@+id/account_bg_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_ordernum"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toRightOf="@+id/member_bg_layout"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            app:corners_radius="3dp"
            app:stroke_color="@color/textgreen"
            app:stroke_width="1dp">

            <!--app:stroke_width="1dp"-->

            <com.wycd.yushangpu.views.ClearEditText
                android:id="@+id/et_login_account"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:background="@null"
                android:drawableRight="@drawable/home_error"
                android:hint="请输入商品名称/编码/简码进行查询"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:textColor="@color/textcolor"
                android:textColorHint="@color/textbb"
                android:textSize="@dimen/sp_14" />
        </com.gt.utils.view.BgFrameLayout>

        <TextView
            android:id="@+id/tv_no_input_goods"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/account_bg_layout"
            android:layout_marginBottom="@dimen/dp_103"
            android:gravity="center_horizontal"
            android:paddingTop="50dp"
            android:text="未录入商品时，点[快速收银]可直接收款" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_shoplist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/account_bg_layout"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/dp_103" />

        <TextView
            android:id="@+id/tv_num_total"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_34"
            android:layout_above="@+id/tv_shoukuan"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginBottom="13dp"
            android:gravity="center_vertical"
            android:text="合计："
            android:textColor="@color/textcolor"
            android:textSize="@dimen/dp_20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_shoukuan"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@+id/tv_num_total"
            android:gravity="center_vertical"
            android:text="件"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_shoukuan"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="20dp"
            android:layout_toLeftOf="@+id/tv_heji"
            android:gravity="center_vertical"
            android:text="￥"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/tv_heji"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_34"
            android:layout_above="@+id/tv_shoukuan"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginBottom="13dp"
            android:gravity="center_vertical"
            android:text="100"
            android:textColor="@color/textred"
            android:textSize="@dimen/dp_20" />

        <TextView
            android:id="@+id/tv_shoukuan"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="@drawable/shap_home_shoukuan"
            android:gravity="center"
            android:text="结  算"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="@dimen/dp_5"

        android:layout_toRightOf="@+id/cashier_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btt_price_exchange"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/background_white"
                android:text="改价"
                android:textColor="@color/text60" />

            <Button
                android:id="@+id/btt_dicount_exchange"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/background_white"
                android:text="折扣"
                android:textColor="@color/text60" />

            <Button
                android:id="@+id/btt_money_exchange"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/background_white"
                android:text="小计"
                android:textColor="@color/text60" />

            <Button
                android:id="@+id/btt_num_exchange"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/background_white"
                android:text="数量"
                android:textColor="@color/text60" />

            <Button
                android:id="@+id/btt_delte"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/btn_background_change"
                android:text="删除"
                android:textColor="@color/text60" />

            <Button
                android:id="@+id/btt_give"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/btn_background_change"
                android:text="赠送"
                android:textColor="@color/text60" />

            <Button
                android:id="@+id/btt_royalty"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/background_white"
                android:text="提成"
                android:textColor="@color/text60" />

            <Button
                android:id="@+id/btt_get_order"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/background_white"
                android:text="取单"
                android:textColor="@color/text60" />

            <Button
                android:id="@+id/btt_hung_order"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/background_white"
                android:text="挂单"
                android:textColor="@color/text60"
                android:visibility="gone" />

            <Button
                android:id="@+id/btt_hung_money"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/background_white"
                android:text="挂账"
                android:textColor="@color/text60" />

            <Button
                android:id="@+id/btt_reture_goods"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/background_white"
                android:text="退货"
                android:textColor="@color/text60"
                android:visibility="gone" />

            <Button
                android:id="@+id/btt_recharge"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/background_orange"
                android:text="充值"
                android:textColor="@color/white"
                android:visibility="gone" />

            <Button
                android:id="@+id/btt_vip_member"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/background_orange"
                android:text="会员"
                android:textColor="@color/white"
                android:visibility="gone" />

            <Button
                android:id="@+id/btt_business"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/background_orange"
                android:text="交易"
                android:textColor="@color/white"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_home_label"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/btn_background_change"
                android:text="打印标签"
                android:textColor="@color/text60"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/scroll_view"
        android:layout_weight="2"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/background_white">

            <ImageView
                android:id="@+id/iv_top_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="@drawable/home_left_chose" />

            <ImageView
                android:id="@+id/iv_top_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@drawable/home_right_chose" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_firstclass"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_toLeftOf="@id/iv_top_right"
                android:layout_toRightOf="@id/iv_top_left" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="@drawable/background_white"
            android:orientation="vertical"
            android:padding="@dimen/dp_5">

            <com.maimengmami.waveswiperefreshlayout.WaveSwipeRefreshLayout
                android:id="@+id/refresh_goods_consume"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="45dp"
                app:blow_wave_color="@color/green">

                <GridView
                    android:id="@+id/gridview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fadeScrollbars="false"
                    android:horizontalSpacing="0.0dip"
                    android:listSelector="#00000000"
                    android:numColumns="4"
                    android:scrollbars="none"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="0.0dip" />

            </com.maimengmami.waveswiperefreshlayout.WaveSwipeRefreshLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/background_green"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/left_toward" />

                    <TextView
                        android:id="@+id/tv_front_page"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="上一页"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_15" />

                    <TextView
                        android:id="@+id/tv_page"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_15" />

                    <TextView
                        android:id="@+id/tv_total_page"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_15" />

                    <TextView
                        android:id="@+id/im_next_page"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="下一页"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_15" />


                    <ImageView
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/right_toward" />

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="22dp"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:background="@color/white"
                        android:textSize="@dimen/dp_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="每页"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_15" />

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:background="@drawable/background_white">

                        <Spinner
                            android:id="@+id/sp_goods_order_num"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/spinner_style"
                            android:dropDownVerticalOffset="36dp"
                            android:spinnerMode="dropdown" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="条/共"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_15" />

                    <TextView
                        android:id="@+id/tv_tatol_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="120"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="条"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_15" />

                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d0000000"
        android:visibility="gone">

        <com.gt.utils.view.BgFrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            app:corners_radius_left_bottom="3dp"
            app:corners_radius_left_top="3dp"
            app:solid_color="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:gravity="center_vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_viptx"
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="@dimen/dp_35"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:src="@mipmap/member_head_nohead" />

                <TextView
                    android:id="@+id/tv_vipname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_toEndOf="@+id/iv_viptx"
                    android:maxWidth="@dimen/dp_55"
                    android:text="散客"
                    android:textColor="@color/text60"
                    android:textSize="@dimen/dp_17" />

                <LinearLayout
                    android:id="@+id/vip_message"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/ll_home_massage"
                    android:layout_toEndOf="@+id/tv_vipname"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="余额:"
                        android:textColor="@color/text60"
                        android:textSize="@dimen/dp_14" />

                    <TextView
                        android:id="@+id/tv_blance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="0.00"
                        android:textColor="@color/textred"
                        android:textSize="@dimen/dp_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="积分:"
                        android:textColor="@color/text60"
                        android:textSize="@dimen/dp_14" />

                    <TextView
                        android:id="@+id/tv_integral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="0"
                        android:textColor="@color/textred"
                        android:textSize="@dimen/dp_14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_home_massage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cb_short_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:button="@null"
                        android:drawableLeft="@drawable/rember_password"
                        android:drawablePadding="5dp"
                        android:text="短信" />

                    <ImageView
                        android:id="@+id/delet_vip"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/home_error"
                        android:visibility="gone" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/rl_jifen"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_34"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="积分："
                    android:textColor="@color/text60"
                    android:textSize="@dimen/dp_13" />

                <TextView
                    android:id="@+id/tv_get_integral"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="0"
                    android:textColor="@color/text60"
                    android:textSize="@dimen/dp_13" />
            </LinearLayout>

        </com.gt.utils.view.BgFrameLayout>
    </FrameLayout>
</RelativeLayout>