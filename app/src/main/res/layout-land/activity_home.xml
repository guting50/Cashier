<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textgray">

    <RelativeLayout
        android:id="@+id/taskbar_layout"
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_5"
        android:background="#1E1E1E">

        <RelativeLayout
            android:id="@+id/rl_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_hedimg"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/member_head_nohead" />

            <TextView
                android:id="@+id/tv_store_name"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/img_hedimg"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="店铺名称"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />

            <com.gt.utils.view.BgFrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_store_name"
                android:layout_centerInParent="true"
                android:padding="3dp"
                app:corners_radius="2dp"
                app:solid_color="@color/texty9c">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="高级版"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10" />
            </com.gt.utils.view.BgFrameLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/btn_cashier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_out"
            android:layout_marginTop="10dp"
            android:src="@mipmap/btn_cashier_true" />

        <ImageView
            android:id="@+id/btn_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_cashier"
            android:src="@mipmap/btn_member_false"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/btn_goods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_member"
            android:src="@mipmap/btn_goods_false"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/btn_sale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_goods"
            android:src="@mipmap/btn_sale_false"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/btn_home_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_sale"
            android:src="@mipmap/btn_home_set_false" />

        <ImageView
            android:id="@+id/btn_houtai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/btn_houtai_false" />

        <RelativeLayout
            android:id="@+id/rl_jiaoban"
            android:layout_width="@dimen/dp_40"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:background="@null"
            android:gravity="center_horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/ig_exchange"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="@dimen/dp_5"
                android:src="@drawable/cash_ico_exchange" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ig_exchange"
                android:layout_marginTop="@dimen/dp_5"
                android:text="交班"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cashier_layout"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_toRightOf="@+id/taskbar_layout"
        android:background="@drawable/background_white">

        <TextView
            android:id="@+id/tv_ordernum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:text="订单号"
            android:textColor="@color/title_color"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_ordertime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_toRightOf="@+id/tv_ordernum"
            android:text="时间"
            android:textColor="@color/text60"
            android:textSize="@dimen/sp_13" />

        <ImageView
            android:id="@+id/im_clear"
            android:layout_width="@dimen/dp_53"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:padding="@dimen/dp_3"
            android:src="@mipmap/qingkong" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@+id/tv_ordernum"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:padding="@dimen/dp_7"
            android:src="@drawable/cash_ico_keyboard"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/account_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_ordernum">

            <com.gt.utils.view.BgFrameLayout
                android:id="@+id/member_bg_layout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                app:corners_radius="3dp"
                app:solid_color="@color/colorPrimary">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="会员[F2]"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_15" />
            </com.gt.utils.view.BgFrameLayout>

            <com.gt.utils.view.BgFrameLayout
                android:id="@+id/account_bg_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_10"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                app:corners_radius="3dp"
                app:stroke_color="@color/colorPrimary"
                app:stroke_width="1dp">

                <com.wycd.yushangpu.widget.views.ClearEditText
                    android:id="@+id/et_login_account"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:background="@null"
                    android:drawableRight="@drawable/home_error"
                    android:hint="请输入商品名称/编码/简码进行查询"
                    android:imeOptions="actionSearch"
                    android:singleLine="true"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/textbb"
                    android:textSize="@dimen/sp_14" />
            </com.gt.utils.view.BgFrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/account_layout"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="@dimen/dp_103"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未录入商品时，点" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[快速收银]"
                android:textColor="@color/texty6b" />

            <TextView
                android:id="@+id/tv_no_input_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可直接收款" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_shoplist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/account_layout"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/dp_103" />

        <TextView
            android:id="@+id/tv_num_total"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_34"
            android:layout_above="@+id/tv_shoukuan"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginBottom="13dp"
            android:gravity="center_vertical"
            android:text="0"
            android:textColor="#1e1e1e"
            android:textSize="@dimen/sp_28"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_shoukuan"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp"
            android:layout_toRightOf="@+id/tv_num_total"
            android:gravity="center_vertical"
            android:text=" 件"
            android:textColor="#1e1e1e"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_shoukuan"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="17dp"
            android:layout_toLeftOf="@+id/tv_heji"
            android:gravity="center_vertical"
            android:text="￥"
            android:textColor="#1e1e1e"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_heji"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_34"
            android:layout_above="@+id/tv_shoukuan"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="13dp"
            android:gravity="center_vertical"
            android:text="0.00"
            android:textColor="#1e1e1e"
            android:textSize="@dimen/sp_25"
            android:textStyle="bold" />

        <com.gt.utils.view.BgFrameLayout
            android:id="@+id/btt_hung_order"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_45"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            app:corners_radius="2dp"
            app:solid_color="@color/title_color">

            <TextView
                android:id="@+id/btt_get_order"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="挂单[F1]"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18" />
        </com.gt.utils.view.BgFrameLayout>

        <com.gt.utils.view.BgFrameLayout
            android:id="@+id/order_count_layout"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_above="@+id/btt_hung_order"
            android:layout_marginLeft="-13dp"
            android:layout_marginBottom="-12dp"
            android:layout_toRightOf="@+id/btt_hung_order"
            android:visibility="gone"
            app:corners_radius="20dp"
            app:solid_color="@android:color/holo_red_dark">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />

        </com.gt.utils.view.BgFrameLayout>

        <com.gt.utils.view.BgFrameLayout
            android:id="@+id/tv_shoukuan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_toRightOf="@+id/btt_hung_order"
            android:tag="0"
            app:corners_radius="3dp"
            app:solid_color="@color/colorPrimary">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="快速收银[Enter]"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />
        </com.gt.utils.view.BgFrameLayout>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toRightOf="@+id/cashier_layout"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btt_hung_money"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/background_white"
                android:text="挂账"
                android:textColor="@color/text60" />

            <Button
                android:id="@+id/btt_reture_goods"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_below="@+id/btt_hung_money"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/background_white"
                android:text="退货"
                android:textColor="@color/text60"
                android:visibility="gone" />

            <Button
                android:id="@+id/btt_recharge"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_below="@+id/btt_reture_goods"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/background_orange"
                android:text="充值"
                android:textColor="@color/white"
                android:visibility="gone" />

            <Button
                android:id="@+id/btt_vip_member"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_below="@+id/btt_recharge"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/background_orange"
                android:text="会员"
                android:textColor="@color/white"
                android:visibility="gone" />

            <Button
                android:id="@+id/btt_business"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_below="@+id/btt_vip_member"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/background_orange"
                android:text="交易"
                android:textColor="@color/white"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_home_label"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/btt_business"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/btn_background_change"
                android:text="打印标签"
                android:textColor="@color/text60"
                android:visibility="gone" />

        </RelativeLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/right_fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_toRightOf="@+id/cashier_layout"
        android:background="@drawable/background_white" />

    <FrameLayout
        android:id="@+id/subsidiary_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/taskbar_layout" />

    <FrameLayout
        android:id="@+id/fragment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>