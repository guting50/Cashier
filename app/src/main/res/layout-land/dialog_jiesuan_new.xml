<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a0000000"
    android:gravity="center"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <!--        android:layout_marginLeft="350dp"-->
    <com.gt.utils.view.BgFrameLayout
        android:id="@+id/jiesuan_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        app:corners_radius_left_bottom="5dp"
        app:corners_radius_left_top="5dp"
        app:solid_color="#EBEBF5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/user_info_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_92"
                    android:layout_margin="5dp"
                    android:background="@drawable/shap_jiesunnot"
                    android:gravity="center_vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_viptx"
                        android:layout_width="@dimen/dp_70"
                        android:layout_height="@dimen/dp_70"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:src="@mipmap/member_head_nohead" />

                    <TextView
                        android:id="@+id/tv_vipname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/iv_viptx"
                        android:maxWidth="@dimen/dp_55"
                        android:text="散客"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/sp_17" />

                    <TextView
                        android:id="@+id/tv_blance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_vipname"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/iv_viptx"
                        android:text="余额:0.00"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_integral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_vipname"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_150"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/tv_blance"
                        android:text="积分:0"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/sp_14" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/user_info_layout"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/shap_jiesunnot">

                    <androidx.core.widget.NestedScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/tv_zhaoling"
                        android:layout_marginTop="@dimen/dp_10">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:text="本单合计"
                                android:textColor="@color/title_color"
                                android:textSize="@dimen/sp_17" />

                            <TextView
                                android:id="@+id/tv_bill_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/dp_15"
                                android:text="0.00"
                                android:textColor="@color/title_color"
                                android:textSize="@dimen/sp_17" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_bill_count"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:layout_marginTop="@dimen/dp_15"
                                android:text="优惠金额"
                                android:textColor="@color/title_color"
                                android:textSize="@dimen/sp_17" />

                            <TextView
                                android:id="@+id/tv_all_coupon_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_bill_count"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_15"
                                android:layout_marginRight="@dimen/dp_15"
                                android:gravity="right|center_vertical"
                                android:text="0.00"
                                android:textColor="@color/title_color"
                                android:textSize="@dimen/sp_17" />

                            <LinearLayout
                                android:id="@+id/discount_amount_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_all_coupon_money"
                                android:layout_margin="@dimen/dp_15">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="商品（会员）优惠"
                                    android:textColor="@color/textred"
                                    android:textSize="@dimen/sp_14" />

                                <TextView
                                    android:id="@+id/tv_discount"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="0.00"
                                    android:textColor="@color/textred"
                                    android:textSize="@dimen/sp_14" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="会员优惠"
                                    android:textColor="@color/textred"
                                    android:textSize="@dimen/sp_14"
                                    android:visibility="gone" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:text="0.00"
                                    android:textColor="@color/textred"
                                    android:textSize="@dimen/sp_14"
                                    android:visibility="gone" />

                            </LinearLayout>

                            <FrameLayout
                                android:id="@+id/li_yhq"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_below="@+id/discount_amount_layout"
                                android:layout_marginLeft="60dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="60dp"
                                android:background="@drawable/select_edit_green_gray"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingRight="@dimen/dp_10">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="优惠券"
                                    android:textSize="@dimen/sp_16" />

                                <TextView
                                    android:id="@+id/tv_coupon_money"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="right"
                                    android:gravity="center|right"
                                    android:hint="请选择优惠券"
                                    android:textSize="@dimen/sp_16" />

                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/li_promotion"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_below="@+id/li_yhq"
                                android:layout_marginLeft="60dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="60dp"
                                android:background="@drawable/select_edit_green_gray"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingRight="@dimen/dp_10">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="优惠活动"
                                    android:textSize="@dimen/sp_16" />

                                <TextView
                                    android:id="@+id/tv_promotion"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="right"
                                    android:gravity="center|right"
                                    android:hint="请选择优惠活动"
                                    android:textSize="@dimen/sp_16" />

                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/li_moling"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_below="@+id/li_promotion"
                                android:layout_marginLeft="60dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="60dp">

                                <com.wycd.yushangpu.widget.NumInputView
                                    android:id="@+id/et_moling"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/select_edit_green_gray"
                                    android:gravity="center|right"
                                    android:paddingLeft="@dimen/dp_10"
                                    android:paddingRight="@dimen/dp_10" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:paddingLeft="@dimen/dp_10"
                                    android:text="抹零："
                                    android:textColor="@color/text60"
                                    android:textSize="@dimen/sp_16" />

                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/li_moling"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text="应收"
                                android:textColor="@color/title_color"
                                android:textSize="@dimen/sp_23" />

                            <TextView
                                android:id="@+id/et_ys_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/li_moling"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="@dimen/dp_10"
                                android:layout_marginRight="@dimen/dp_15"
                                android:text="0.00"
                                android:textColor="@color/title_color"
                                android:textSize="@dimen/sp_28" />

                            <View
                                android:id="@+id/v_dividing"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/et_ys_money"
                                android:layout_marginTop="15dp"
                                android:background="@color/view_gray_line" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/pay_mode_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/v_dividing"
                                android:nestedScrollingEnabled="false"
                                android:splitMotionEvents="false" />
                        </RelativeLayout>
                    </androidx.core.widget.NestedScrollView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/v_dividing_2"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="找零"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/sp_23" />

                    <TextView
                        android:id="@+id/tv_zhaoling"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/v_dividing_2"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_15"
                        android:text="0.00"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/sp_28" />

                    <View
                        android:id="@+id/v_dividing_2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_above="@+id/cb_short_message"
                        android:layout_marginTop="15dp"
                        android:background="@color/view_gray_line" />

                    <CheckBox
                        android:id="@+id/cb_small_ticket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="15dp"
                        android:drawablePadding="5dp"
                        android:text="小票" />

                    <CheckBox
                        android:id="@+id/cb_short_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="@dimen/dp_180"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_toRightOf="@+id/cb_small_ticket"
                        android:drawablePadding="5dp"
                        android:text="短信" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_58"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_52"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_weight="1"
                        android:background="@drawable/shap_jiesunnot"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_yhq"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/cash_ico_coupon" />

                        <TextView
                            android:id="@+id/tv_yhq"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:text="优惠券"
                            android:textColor="@color/text60"
                            android:textSize="@dimen/sp_11" />

                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/li_xianjin"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/shap_jiesunnot"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/cash_ico_wallet" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:text="现金支付"
                            android:textColor="@color/text60"
                            android:textSize="@dimen/sp_17" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/li_yue"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_weight="1"
                        android:background="@drawable/shap_jiesunnot"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/cash_ico_purse" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:text="余额支付"
                            android:textColor="@color/text60"
                            android:textSize="@dimen/sp_17" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/li_saoma"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/shap_jiesunnot"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/cash_ico_scan" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:text="扫码支付"
                            android:textColor="@color/text60"
                            android:textSize="@dimen/sp_17" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/li_ali"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/shap_jiesunnot"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/cash_ico_alipay" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:text="支付宝"
                            android:textColor="@color/text60"
                            android:textSize="@dimen/sp_17" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/li_wx"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_weight="1"
                        android:background="@drawable/shap_jiesunnot"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/cash_ico_wechat" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:text="微信"
                            android:textColor="@color/text60"
                            android:textSize="@dimen/sp_17" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/li_yinlian"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/shap_jiesunnot"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/cash_ico_union" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:text="银联"
                            android:textColor="@color/text60"
                            android:textSize="@dimen/sp_17" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/li_jifen"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/shap_jiesunnot"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/cash_ico_coin" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:text="积分"
                            android:textColor="@color/text60"
                            android:textSize="@dimen/sp_17" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/li_qita"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_weight="1"
                        android:background="@drawable/shap_jiesunnot"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/cash_ico_other" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:text="其他"
                            android:textColor="@color/text60"
                            android:textSize="@dimen/sp_17" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/li_union"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/shap_jiesunnot"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="invisible">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/cash_ico_check" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:text="联合"
                            android:textColor="@color/text60"
                            android:textSize="@dimen/sp_17" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="8"
                    android:orientation="horizontal">

                    <include
                        layout="@layout/include_num_keyboard_layout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/li_100"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/selected_keyboard_bg">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="￥"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp_13" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="100"
                                    android:textColor="@color/white"
                                    android:textSize="20sp" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/li_50"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="1dp"
                            android:layout_weight="1"
                            android:background="@drawable/selected_keyboard_bg">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="bottom"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="￥"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp_13" />

                                <TextView
                                    android:layout_width="wrap_content"
