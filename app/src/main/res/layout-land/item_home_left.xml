<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_65"
        android:background="@color/lightgray"
        android:paddingLeft="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_zeng"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/background_red"
            android:gravity="center_vertical|center_horizontal"
            android:text="赠"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_12"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_9"
            android:layout_toRightOf="@id/tv_zeng"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="超值小吃  M/8寸"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_st"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toLeftOf="@+id/iv_del"
            android:gravity="left"
            android:text="1111112222"
            android:textColor="@color/text60"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_vipprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="￥ 36.00"
            android:textColor="@color/textlittle"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_teprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="0.6折"
            android:textColor="@color/textred"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_toLeftOf="@+id/iv_del"
            android:text="￥ 36.00"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_staff"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_st"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="1"
            android:textColor="@color/text60"
            android:textSize="@dimen/sp_13"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_del"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_below="@+id/tv_staff"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toLeftOf="@+id/tv_num"
            android:padding="@dimen/dp_4"
            android:src="@drawable/cash_ico_minus" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="@dimen/dp_50"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_staff"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_add"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/text60"
            android:textSize="@dimen/sp_18" />

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_below="@+id/tv_staff"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_15"
            android:padding="@dimen/dp_4"
            android:src="@drawable/home_add" />
    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@drawable/shap_xuxian" />
</FrameLayout>