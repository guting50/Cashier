<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_75"
            android:background="@color/item_bg"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_3"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="超值小吃  M/8寸"
                android:textColor="@color/title_color"
                android:textSize="@dimen/sp_18" />

            <com.gt.utils.widget.BgTextView
                android:id="@+id/tv_zeng"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="@dimen/dp_13"
                android:layout_toRightOf="@id/tv_name"
                android:gravity="center"
                android:paddingBottom="1dp"
                android:text="赠"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_13"
                app:corners_radius="3dp"
                app:solid_color="@color/textred" />

            <TextView
                android:id="@+id/tv_staff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="13dp"
                android:layout_toRightOf="@+id/tv_zeng"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="提成员工"
                android:textColor="@color/yunpu"
                android:textSize="@dimen/dp_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_10">

                <TextView
                    android:id="@+id/tv_vipprice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:maxLines="1"
                    android:text="￥ 36.00/桶"
                    android:textColor="@color/text66"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_st"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:maxLines="1"
                    android:text="160/s"
                    android:textColor="@color/text66"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_teprice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:maxLines="1"
                    android:text="0.6折"
                    android:textColor="@color/textred1"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:maxLines="1"
                    android:text="x 1"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="right"
                    android:maxLines="1"
                    android:text="36.00"
                    android:textColor="#303111"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="#ebecee" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/btn_del"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_75"
        android:background="@color/theme_color">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@mipmap/icon_item_delete" />

    </FrameLayout>
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>